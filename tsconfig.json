{
	"compilerOptions": {
		"baseUrl": "./source",
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"dom",
			"es2015"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "lib",
		"target": "es6"
	},
	"include": [
		"source/index.ts"
	]
}
